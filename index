<script src="https://cdnjs.cloudflare.com/ajax/libs/squish/1.0.1/squish.min.js"></script>

<script>
// ── Minimal DDS decoder (no external dep needed) ────────────────────────────
// Supports: DXT1/3/5, BC4/5, uncompressed RGBA/BGRA/RGB/A8/L8

const DDSD_CAPS=0x1,DDSD_HEIGHT=0x2,DDSD_WIDTH=0x4,DDSD_PITCH=0x8,
      DDSD_PIXELFORMAT=0x1000,DDSD_MIPMAPCOUNT=0x20000,DDSD_LINEARSIZE=0x80000;
const DDPF_ALPHAPIXELS=0x1,DDPF_ALPHA=0x2,DDPF_FOURCC=0x4,
      DDPF_RGB=0x40,DDPF_LUMINANCE=0x20000;
const FOURCC_DXT1=0x31545844,FOURCC_DXT3=0x33545844,FOURCC_DXT5=0x35545844;
const FOURCC_BC4U=0x55344342,FOURCC_BC4S=0x53344342;
const FOURCC_BC5U=0x55354342,FOURCC_BC5S=0x53354342;
const FOURCC_ATI1=0x31495441,FOURCC_ATI2=0x32495441;
const FOURCC_DX10=0x30315844;

function makeFourCC(s){ return s.charCodeAt(0)|(s.charCodeAt(1)<<8)|(s.charCodeAt(2)<<16)|(s.charCodeAt(3)<<24); }

// DXT color block decode helpers
function unpackRGB565(c){ return [(c>>11)*255/31|0, ((c>>5)&63)*255/63|0, (c&31)*255/31|0]; }

function decodeDXT1Block(src, off, dst, bx, by, w){
  const c0=src[off]|(src[off+1]<<8), c1=src[off+2]|(src[off+3]<<8);
  let bits = src[off+4]|(src[off+5]<<8)|(src[off+6]<<16)|(src[off+7]*16777216);
  const col=[[],[],[],[]];
  col[0]=unpackRGB565(c0); col[1]=unpackRGB565(c1);
  if(c0>c1){
    col[2]=col[0].map((v,i)=>((2*v+col[1][i])/3|0));
    col[3]=col[0].map((v,i)=>((v+2*col[1][i])/3|0));
  } else {
    col[2]=col[0].map((v,i)=>((v+col[1][i])>>1));
    col[3]=[0,0,0];
  }
  for(let py=0;py<4;py++) for(let px=0;px<4;px++){
    const idx=(bits>>((py*4+px)*2))&3;
    const dx=bx+px, dy=by+py;
    if(dx<w){
      const p=(dy*w+dx)*4;
      dst[p]=col[idx][0]; dst[p+1]=col[idx][1]; dst[p+2]=col[idx][2];
      dst[p+3]=(c0<=c1&&idx===3)?0:255;
    }
  }
}

function decodeDXT3Block(src, off, dst, bx, by, w){
  // 8 bytes alpha, 8 bytes color
  const alphaBlock=src.slice(off, off+8);
  decodeDXT1Block(src, off+8, dst, bx, by, w);
  for(let py=0;py<4;py++) for(let px=0;px<4;px++){
    const ai = py*4+px;
    const ab = alphaBlock[ai>>1];
    const a = (ai&1)?(ab>>4):(ab&0xf);
    const dx=bx+px, dy=by+py;
    if(dx<w) dst[(dy*w+dx)*4+3] = (a*255/15)|0;
  }
}

function decodeDXT5Alpha(src, off){
  const a0=src[off], a1=src[off+1];
  const table=[a0,a1];
  if(a0>a1){ for(let i=2;i<8;i++) table[i]=((8-i)*a0+(i-1)*a1)/7|0; }
  else { for(let i=2;i<6;i++) table[i]=((6-i)*a0+(i-1)*a1)/5|0; table[6]=0; table[7]=255; }
  // 6 bytes of 3-bit indices
  let bits=BigInt(0);
  for(let i=0;i<6;i++) bits|=(BigInt(src[off+2+i])<<BigInt(i*8));
  const alphas=[];
  for(let i=0;i<16;i++) alphas.push(table[Number((bits>>BigInt(i*3))&BigInt(7))]);
  return alphas;
}

function decodeDXT5Block(src, off, dst, bx, by, w){
  const alphas=decodeDXT5Alpha(src, off);
  decodeDXT1Block(src, off+8, dst, bx, by, w);
  for(let py=0;py<4;py++) for(let px=0;px<4;px++){
    const dx=bx+px, dy=by+py;
    if(dx<w) dst[(dy*w+dx)*4+3]=alphas[py*4+px];
  }
}

function decodeBC4Block(src, off, dst, bx, by, w, channel){
  const alphas=decodeDXT5Alpha(src, off);
  for(let py=0;py<4;py++) for(let px=0;px<4;px++){
    const dx=bx+px, dy=by+py;
    if(dx<w){ const p=(dy*w+dx)*4; const v=alphas[py*4+px]; dst[p]=v; dst[p+1]=v; dst[p+2]=v; dst[p+3]=255; }
  }
}

function decodeBC5Block(src, off, dst, bx, by, w){
  const r=decodeDXT5Alpha(src, off);
  const g=decodeDXT5Alpha(src, off+8);
  for(let py=0;py<4;py++) for(let px=0;px<4;px++){
    const dx=bx+px, dy=by+py;
    if(dx<w){ const p=(dy*w+dx)*4; dst[p]=r[py*4+px]; dst[p+1]=g[py*4+px]; dst[p+2]=0; dst[p+3]=255; }
  }
}

function decodeDDS(buffer){
  const view = new DataView(buffer);
  const bytes = new Uint8Array(buffer);

  if(view.getUint32(0,true)!==0x20534444) throw new Error('Not a valid DDS file');
  const size=view.getUint32(4,true);
  if(size!==124) throw new Error('Invalid DDS header size');

  const flags=view.getUint32(8,true);
  const height=view.getUint32(12,true);
  const width=view.getUint32(16,true);

  const pfOff=76;
  const pfSize=view.getUint32(pfOff,true);
  const pfFlags=view.getUint32(pfOff+4,true);
  const fourCC=view.getUint32(pfOff+8,true);
  const rgbBitCount=view.getUint32(pfOff+12,true);
  const rMask=view.getUint32(pfOff+16,true);
  const gMask=view.getUint32(pfOff+20,true);
  const bMask=view.getUint32(pfOff+24,true);
  const aMask=view.getUint32(pfOff+28,true);

  const dataOffset = 128;
  const src = bytes.subarray(dataOffset);
  const dst = new Uint8ClampedArray(width*height*4);

  if(pfFlags & DDPF_FOURCC){
    if(fourCC===FOURCC_DXT1){
      for(let by=0;by<height;by+=4) for(let bx=0;bx<width;bx+=4){
        const off=((by/4*(Math.ceil(width/4))+(bx/4))*8)|0;
        decodeDXT1Block(src,off,dst,bx,by,width);
      }
    } else if(fourCC===FOURCC_DXT3){
      for(let by=0;by<height;by+=4) for(let bx=0;bx<width;bx+=4){
        const off=((by/4*(Math.ceil(width/4))+(bx/4))*16)|0;
        decodeDXT3Block(src,off,dst,bx,by,width);
      }
    } else if(fourCC===FOURCC_DXT5){
      for(let by=0;by<height;by+=4) for(let bx=0;bx<width;bx+=4){
        const off=((by/4*(Math.ceil(width/4))+(bx/4))*16)|0;
        decodeDXT5Block(src,off,dst,bx,by,width);
      }
    } else if(fourCC===FOURCC_ATI1||fourCC===FOURCC_BC4U||fourCC===FOURCC_BC4S){
      for(let by=0;by<height;by+=4) for(let bx=0;bx<width;bx+=4){
        const off=((by/4*(Math.ceil(width/4))+(bx/4))*8)|0;
        decodeBC4Block(src,off,dst,bx,by,width,0);
      }
    } else if(fourCC===FOURCC_ATI2||fourCC===FOURCC_BC5U||fourCC===FOURCC_BC5S){
      for(let by=0;by<height;by+=4) for(let bx=0;bx<width;bx+=4){
        const off=((by/4*(Math.ceil(width/4))+(bx/4))*16)|0;
        decodeBC5Block(src,off,dst,bx,by,width);
      }
    } else if(fourCC===FOURCC_DX10){
      // DX10 header
      const dxgiFormat=view.getUint32(128,true);
      const src2=bytes.subarray(148);
      decodeDX10(dxgiFormat,src2,dst,width,height);
    } else {
      throw new Error('Unsupported FourCC: '+fourCC.toString(16));
    }
  } else if(pfFlags & DDPF_RGB){
    // Uncompressed
    const bytesPerPixel = rgbBitCount/8|0;
    function maskToShift(m){ if(!m)return 0; let s=0; while(!(m&1)){m>>=1;s++;} return s; }
    function maskToMax(m){ if(!m)return 1; let v=m; while(v&(v-1)) v=v&(v-1); return v>>maskToShift(m); }
    const rs=maskToShift(rMask), gs=maskToShift(gMask), bs=maskToShift(bMask), as=maskToShift(aMask);
    const rm=maskToMax(rMask)||255, gm=maskToMax(gMask)||255, bm=maskToMax(bMask)||255, am=maskToMax(aMask)||255;
    for(let y=0;y<height;y++) for(let x=0;x<width;x++){
      const si=(y*width+x)*bytesPerPixel;
      let px=0;
      for(let b=0;b<bytesPerPixel;b++) px|=(src[si+b]<<(b*8));
      const di=(y*width+x)*4;
      dst[di]=rMask?((px&rMask)>>rs)*255/rm|0:0;
      dst[di+1]=gMask?((px&gMask)>>gs)*255/gm|0:0;
      dst[di+2]=bMask?((px&bMask)>>bs)*255/bm|0:0;
      dst[di+3]=aMask?((px&aMask)>>as)*255/am|0:255;
    }
  } else if(pfFlags & DDPF_LUMINANCE){
    const bytesPerPixel = rgbBitCount/8|0;
    for(let y=0;y<height;y++) for(let x=0;x<width;x++){
      const si=(y*width+x)*bytesPerPixel;
      const v=src[si];
      const di=(y*width+x)*4;
      dst[di]=dst[di+1]=dst[di+2]=v; dst[di+3]=255;
    }
  } else if(pfFlags & DDPF_ALPHA){
    for(let i=0;i<width*height;i++){
      dst[i*4]=dst[i*4+1]=dst[i*4+2]=0; dst[i*4+3]=src[i];
    }
  } else {
    throw new Error('Unsupported pixel format');
  }

  return { data: dst, width, height };
}

function decodeDX10(fmt, src, dst, w, h){
  // DXGI_FORMAT partial support
  if(fmt===28||fmt===29){ // RGBA8_UNORM / RGBA8_UNORM_SRGB
    for(let i=0;i<w*h*4;i++) dst[i]=src[i];
  } else if(fmt===87||fmt===88){ // BGRA8
    for(let i=0;i<w*h;i++){
      dst[i*4]=src[i*4+2]; dst[i*4+1]=src[i*4+1]; dst[i*4+2]=src[i*4]; dst[i*4+3]=src[i*4+3];
    }
  } else {
    throw new Error('Unsupported DXGI format: '+fmt);
  }
}

// ── App state ────────────────────────────────────────────────────────────────
const files = new Map(); // name -> { file, status, blob }
let idCounter = 0;

const dropZone = document.getElementById('dropZone');
const fileInput = document.getElementById('fileInput');
const queueEl  = document.getElementById('queue');
const queueSec = document.getElementById('queueSection');
const queueCount = document.getElementById('queueCount');
const convertBtn = document.getElementById('convertBtn');
const progressWrap = document.getElementById('progressWrap');
const progressBar = document.getElementById('progressBar');
const progressLabel = document.getElementById('progressLabel');

dropZone.addEventListener('dragover', e=>{ e.preventDefault(); dropZone.classList.add('drag-over'); });
dropZone.addEventListener('dragleave', ()=> dropZone.classList.remove('drag-over'));
dropZone.addEventListener('drop', e=>{ e.preventDefault(); dropZone.classList.remove('drag-over'); addFiles(e.dataTransfer.files); });
dropZone.addEventListener('click', ()=> fileInput.click());
fileInput.addEventListener('change', e=> addFiles(e.target.files));

function addFiles(fileList){
  for(const f of fileList){
    if(!f.name.toLowerCase().endsWith('.dds')){ alert(`${f.name} is not a .dds file`); continue; }
    const id = 'f'+(idCounter++);
    files.set(id, { id, file: f, status:'pending', blob:null });
    renderCard(id);
  }
  updateUI();
}

function formatSize(n){ return n>1e6?(n/1e6).toFixed(1)+'MB':n>1e3?(n/1e3).toFixed(0)+'KB':n+'B'; }

function renderCard(id){
  const entry = files.get(id);
  const card = document.createElement('div');
  card.className='file-card'; card.id='card-'+id;
  card.innerHTML=`
    <span class="file-name">${entry.file.name}</span>
    <span class="file-size">${formatSize(entry.file.size)}</span>
    <span class="badge badge-pending" id="badge-${id}">PENDING</span>
    <button class="dl-btn" id="dl-${id}" style="display:none" onclick="downloadFile('${id}')">↓ PNG</button>
  `;
  queueEl.appendChild(card);
}

function setBadge(id, status, text){
  const b=document.getElementById('badge-'+id);
  b.className='badge badge-'+status; b.textContent=text;
}

function updateUI(){
  const count = files.size;
  queueSec.style.display = count>0?'block':'none';
  queueCount.textContent = count+' file'+(count!==1?'s':'');
}

function clearQueue(){
  files.clear(); queueEl.innerHTML='';
  progressWrap.classList.remove('active');
  fileInput.value='';
  updateUI();
}

async function convertAll(){
  convertBtn.disabled=true;
  const entries=[...files.values()].filter(e=>e.status==='pending'||e.status==='error');
  const total=entries.length;
  if(!total){ convertBtn.disabled=false; return; }

  progressWrap.classList.add('active');
  progressBar.style.width='0%';

  for(let i=0;i<entries.length;i++){
    const entry=entries[i];
    setBadge(entry.id,'processing','CONVERTING');
    progressLabel.textContent=`[${i+1}/${total}] ${entry.file.name}`;
    try {
      const buf=await entry.file.arrayBuffer();
      const {data,width,height}=decodeDDS(buf);
      const canvas=document.createElement('canvas');
      canvas.width=width; canvas.height=height;
      const ctx=canvas.getContext('2d');
      ctx.putImageData(new ImageData(data,width,height),0,0);
      const blob=await new Promise(r=>canvas.toBlob(r,'image/png'));
      entry.blob=blob; entry.status='done';
      setBadge(entry.id,'done','DONE');
      document.getElementById('dl-'+entry.id).style.display='inline-block';
    } catch(err){
      entry.status='error';
      setBadge(entry.id,'error','ERROR');
      console.error(entry.file.name, err);
    }
    progressBar.style.width=((i+1)/total*100)+'%';
    await new Promise(r=>setTimeout(r,0));
  }

  progressLabel.textContent=`Done — ${entries.filter(e=>e.status==='done').length}/${total} converted`;
  convertBtn.disabled=false;
}

function downloadFile(id){
  const entry=files.get(id);
  if(!entry||!entry.blob) return;
  const a=document.createElement('a');
  a.href=URL.createObjectURL(entry.blob);
  a.download=entry.file.name.replace(/\.dds$/i,'.png');
  a.click();
  setTimeout(()=>URL.revokeObjectURL(a.href),1000);
}
</script>
</body>
</html>
